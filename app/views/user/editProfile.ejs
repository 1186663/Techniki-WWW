<%- include('../partials/header', { title: 'Edytuj Profil' }) %>

<div class="container mt-4">
    <h1 class="mb-4">Edytuj Profil</h1>
    <% if (message) { %>
        <div class="alert alert-danger" role="alert">
            <%= message %>
        </div>
    <% } %>
    <form action="/users/profile/edit" method="POST" class="mb-3">
        <div class="mb-3">
            <label for="username" class="form-label">Pseudonim:</label>
            <input type="text" id="username" name="username" value="<%= user.username %>" required class="form-control">
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">E-mail:</label>
            <input type="email" id="email" name="email" value="<%= user.email %>" required class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
        <a href="/users/profile" class="btn btn-primary me-2">Anuluj</a>
    </form>

    <form action="/users/profile/delete" method="POST" onsubmit="return confirm('Czy na pewno chcesz usunąć swoje konto?');" class="mb-3">
        <button type="submit" class="btn btn-danger">Usuń konto</button>
    </form>
</div>

<%- include('../partials/footer') %>
